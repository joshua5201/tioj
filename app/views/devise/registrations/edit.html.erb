<h4 class="page-header">Edit <%= resource_name.to_s.humanize %> <small><%= current_user.username %></small></h4>
<div class="col-xs-12 col-md-6 col-lg-3">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>
  
  <div class="form-group">
    <%= f.label :nickname %>
    <%= f.text_field :nickname, :autofocus => true, :class => "form-control flat" %>
  </div>
  
  <div class="form-group">
    <%= f.label :email %>
    <%= f.text_field :email, :class => "form-control flat" %>
  </div>
  
  <div class="form-group">
    <%= f.label :motto %>
    <%= f.text_field :motto, :class => "form-control flat" %>
  </div>
  
  <div class="form-group">
      <%= f.label :avatar %>
      <%= f.file_field :avatar, :class => "form-control flat" %>
      <%= f.hidden_field :avatar_cache %>
  </div>
  
  <div class="form-group">
    <%= f.label :name, "Name (This will be hidden to others.)" %>
    <%= f.text_field :name, :class => "form-control flat" %>
  </div>
  
  <div class="form-group">
    <%= f.label :school, "School, Class and Seat Number (This will be hidden to others.)" %>
    <%= f.text_field :school, :class => "form-control flat" %>
  </div>
  
  <div class="form-group">
    <%= f.label :gradyear, "Graduation Year of High School (e.g. 103)" %>
    <%= f.number_field :gradyear, :class => "form-control flat" %>
  </div>
  
  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_username %></div>
  <% end %>

  <div class="form-group">
    <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i>
    <%= f.password_field :current_password, :autocomplete => "off", :class => "form-control flat" %>
  </div>

  <div class="form-group">
    <%= f.label :password %> <i>(leave blank if you don't want to change it)</i>
    <%= f.password_field :password, :autocomplete => "off", :class => "form-control flat" %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, :autocomplete => "off", :class => "form-control flat" %>
  </div>
  
  <hr>
  
  <%= f.submit "Update", :class => "btn btn-success" %>
<% end %>

<br>
<h6 class="page-header">Unhappy? <small>Delete Account<small></h6>
<%= button_to "Delete My Account", registration_path(resource_name), data: { confirm: "Are you sure ?\nIf this is because you don't like your avatar, you should know that in account settings you can always change it whatsoever." }, method: :delete, :class => 'btn btn-xs btn-warning' %>
